<aura:component >
    <aura:attribute name="cases" type="List"/>
	<article class="slds-card">    
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">  
                <h2>Case List</h2> 
            </header> 
        </div>
        <div class="slds-card__body slds-card__body_inner table_case" >
            <table class="slds-table slds-table_bordered slds-table_cell-buffer">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col">
                            <div class="slds-truncate" title="Opportunity Name">Case Number</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Account Name">Case Orgin</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Close Date">Sub Type</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Stage">Create Date</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration var="case" items="{!v.cases}">
                        <tr>
                            <th scope="row" data-label="Opportunity Name">
                                <div class="slds-truncate" title="Cloudhub"><a href="javascript:void(0);">{!case.CaseNumber}</a></div>
                            </th>
                            <td data-label="Account Name">
                                <div class="slds-truncate" title="Cloudhub">{!case.Origin}</div>
                            </td>
                            <td data-label="Close Date">
                                <div class="slds-truncate" title="4/14/2015">{!case.Type}</div>
                            </td>
                            <td data-label="Prospecting">
                                <div class="slds-truncate" title="Prospecting">{!case.CreatedDate}</div>
                            </td>
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
        </div> 
    </article>
</aura:component>