<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global" >
    <h1 class="tittlepage2"><b>Assurer</b></h1>    
    <div class="text slds-text-align_left">
        <h3>Loan Information</h3>
    </div>
    
    <!-- content -->
    <form class="slds-form slds-m-top_x-small">
        <div class="slds-form--horizontal slds-size_1-of-2">	   
            <div class="slds-form-element slds-size--4-of-6">
                <label class="slds-form-element__label" for="loanNumber">Loan number</label>
                <div class="slds-form-element__control">
                    <input type="text" id="loanNumber" class="slds-input" placeholder="Placeholder Text" />
                </div>
            </div>
            <div class="slds-form-element slds-size--4-of-6">
                <label class="slds-form-element__label" for="amount">Amount</label>
                <div class="slds-form-element__control">
                    <input type="text" id="amount" class="slds-input" placeholder="Placeholder Text" />
                </div>
            </div>
            <div class="slds-form-element slds-size--4-of-6">
                <label class="slds-form-element__label" for="selectDuration">Duration</label>
                <div class="slds-form-element__control">
                    <select class="slds-select" id="selectDuration">
                        <option>Option One</option>
                        <option>Option Two</option>
                        <option>Option Three</option>
                    </select>
                </div>
            </div>
        </div>
    </form>	
</aura:component>